<header>
	<h1>{{.Name}}</h1>
</header>
{{- if .Members }}
<section id="relevant-members">
	<h2>Relevant members</h2>
	<p>{{.Name}} has {{len .Members}} related {{quantity .Members "member" "members"}}.</p>
	<ul>
	{{- range .Members -}}
		{{- $class := (index . 0) -}}
		{{- $member := (index . 1) }}
		<li><a class="element-link" href="{{link "member" $class $member}}">{{icon "member" $class $member}}{{$class}}.{{$member}}</a></li>
	{{- end }}
	</ul>
</section>
{{- end }}
